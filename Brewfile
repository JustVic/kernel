# GNU floating-point libs - for cross-compiling binutils
brew 'gmp'
brew 'mpfr'
brew 'libmpc'

# GNU autoconf/automake -  for cross-compiling binutils
brew 'autoconf'
brew 'automake'

# for assembling x86
brew 'nasm'

# for making a bootable ISO
brew 'xorriso'

# for running the OS
brew 'qemu'

